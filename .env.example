# Nginx Docker CI/CD Projesi - Örnek Ortam Değişkenleri

# Nginx Ayarları
NGINX_VERSION=alpine
NGINX_PORT=8080
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Docker Ayarları
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_NAME=nginx-docker-cicd
DOCKER_IMAGE_TAG=latest

# Uygulama Ayarları
APP_ENV=development
APP_VERSION=1.0.0

# Güvenlik Ayarları
RATE_LIMIT=1r/s
RATE_LIMIT_BURST=5
MAX_BODY_SIZE=10m

# Monitoring Ayarları
ENABLE_METRICS=true
METRICS_PORT=8081
ENABLE_HEALTH_CHECK=true

# Logging Ayarları
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_ACCESS_LOG=true
ENABLE_ERROR_LOG=true 